<Alloy>
	<Window fullscreen="false">
		<View id="detailView">
			
			<View id="titleView">
				<View id="bannerViewLabel">
					<Label id="titleLabel" />
					<Label id="categoryLabel" />
				</View>
			</View>

			<View id="buttonView">
				<Button id="buttonViewMap" onClick="doViewMap" title="View Map" class="btnMenu" left="10dp" />
				<Button id="buttonShare" onClick="doShare" title="Share" class="btnMenu" right="10dp" />
			</View>

			<ScrollView id="detailScrollView">
				<ImageView id="bannerImage" />
				
				<View id="detailViewPadding">
					<View id="infoContainer">
						<View class="infoRow">
							<Label class="infoKey">Date</Label>
							<Label id="infoDate" class="infoValue" />
						</View>
						<View class="infoRow">
							<Label class="infoKey">Time</Label>
							<Label id="infoTime" class="infoValue" />
						</View>
						<View class="infoRow">
							<Label class="infoKey">Location</Label>
							<Label id="infoLocation" class="infoValue" />
						</View>
						<View class="infoRow" bottom="3dp">
							<Label class="infoKey">Phone</Label>
							<Label id="infoPhone" class="infoValue" />
						</View>
					</View>

					<Label id="descriptionText">Description</Label>
					<Label id="detailContent" top="2" />
				</View>
			</ScrollView>

		</View>
	</Window>
</Alloy>